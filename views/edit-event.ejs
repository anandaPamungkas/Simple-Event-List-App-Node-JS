<%- include('partials/header') %>
<div class="row" style="margin-left: 50px; margin-right: 50px;">
    <form action="/event/edit/<%= item[0].e_id %>" method="POST" class="col s12">
        <div class="form-group row">
            <div class="col-10">
                <input name="e_id" type="hidden" class="form-control" value="<%= item[0].e_id %>"/>
            </div>
        </div>
        <div class="form-group row">
            <label for="e_name" class="col-2 col-form-label">Name</label>
            <div class="col-10">
                <input name="e_name" type="text" class="form-control" value="<%= item[0].e_name %>"/>
            </div>
        </div>
        <div class="form-group row">
            <label for="e_start_date" class="col-2 col-form-label">Start Date</label>
            <div class="col-10"> 
                <input name="e_start_date" type="date" value="<%= item[0].e_start_date %>" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <label for="e_end_date" class="col-2 col-form-label">Start Date</label>
            <div class="col-10"> 
                <input name="e_end_date" type="date" value="<%= item[0].e_end_date %>" class="form-control">
               
            </div>
        </div>
        <div class="form-group row">
            <label for="e_desc" class="col-2 col-form-label">Description</label>
            <div class="col-10"> 
                <textarea name="e_desc" id="e_desc" cols="30" rows="4" class="form-control"><%= item[0].e_desc %></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="e_location" class="col-2 col-form-label">Location</label>
            <div class="col-10"> 
                <textarea name="e_location" id="e_location" cols="30" rows="4" class="form-control"><%= item[0].e_location %></textarea>
            </div>
        </div>
     
        
        <div class="form-group row">
            <div class="col-10"> 
                <input type="submit" name="submit" value="Save event" class="btn btn-primary btn-lg"/>
            </div>
        </div>
    </form>
</div>
   
<%- include('partials/footer') %>