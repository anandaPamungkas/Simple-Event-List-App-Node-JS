<%- include('partials/header') %>
    <div class="">
        <div class="col s12">
            <a href="/event/add" class="btn btn-success btn-lg">Add a new event</a>
        </div>
    </div>
    <div class="=">
        <div class="col s12">
            <% if(items.length >0 ){ %>
                <table class="table">
                    <thead>
                        <tr>
                        <th style="width:1%;text-align:center">ID</th>
                        <th style="width:49%">Name</th>
                        <th style="width:20%">Description</th>
                        <th style="width:10%">Location</th>
                        <th colspan="2" style="width:20%;text-align:center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(function(item){ %>

                      
                           
                            <tr>
                            <td style="width:1%;text-align:center"><%=item.e_id %></td>
                            <td><%= item.e_name %></td>
                            <td><%= item.e_desc %></td>
                            <td><%= item.e_location %></td>
                            <td colspan="2" style="width:20%;text-align:center">
                                <a href= "/event/edit/<%= item.e_id %>" class="btn btn-success">Edit</a>
                                <a href= "/event/delete/<%= item.e_id %>" class="btn btn-danger">Delete</a>
                            </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            <% }else{ %>
                <p><strong>There are no records</strong></p>
            <%}%>
    </div>
    </div>
<%- include('partials/footer') %>